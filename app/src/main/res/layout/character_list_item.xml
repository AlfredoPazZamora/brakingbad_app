<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_character"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="5dp"
            android:src="@drawable/img_example"
            android:layout_centerVertical="true"
            tools:src="@drawable/ic_launcher_foreground"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/img_character"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/icon_status_character"
        >

            <TextView
                android:id="@+id/name_character"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_name"
                tools:text="@string/text_name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black_212"
                />

            <TextView
                android:id="@+id/nickname_character"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_nickname"
                tools:text="@string/text_nickname"
                android:textStyle="italic"
                android:textSize="15sp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:textColor="@color/blueMing_006"
                />


        </LinearLayout>

        <ImageView
            android:id="@+id/icon_status_character"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_unknow"
            tools:src="@drawable/ic_launcher_foreground"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            />


    </RelativeLayout>
</layout>