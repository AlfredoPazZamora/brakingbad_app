<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/firstRecycler_phrases_binding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.PhraseFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/phrase_click"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/click_phrase"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    >
                    <TextView
                        android:id="@+id/phrase_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/text_generic"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:paddingBottom="30dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="@color/black_212"
                        />
                    <TextView
                        android:id="@+id/author_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="@string/text_generic"
                        android:textStyle="italic"
                        android:textSize="12sp"
                        android:paddingTop="15dp"
                        android:layout_gravity="center"
                        android:textColor="@color/gray_495"
                        />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>