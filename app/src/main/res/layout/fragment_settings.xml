<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.SettingsFragment">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <!-- WORK IN THIS AREA -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >


                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_icon_black"
                    android:layout_gravity="center"
                    android:layout_marginVertical="20dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    >

                    <ImageView
                        android:id="@+id/icon_settings_notifications"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_notifications" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:singleLine="true"
                        android:text="@string/settings_text_notifications"
                        android:textColor="#262626"
                        android:textSize="20sp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/icon_settings_notifications"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    >

                    <ImageView
                        android:id="@+id/icon_settings_help"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_help" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:singleLine="true"
                        android:text="@string/settings_text_help"
                        android:textColor="#262626"
                        android:textSize="20sp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/icon_settings_help"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    >

                    <ImageView
                        android:id="@+id/icon_settings_dark_mode"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_dark_mode" />

                    <TextView
                        android:id="@+id/text_settings_dark_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="10dp"
                        android:layout_toEndOf="@id/icon_settings_dark_mode"
                        android:drawablePadding="5dp"
                        android:singleLine="true"
                        android:text="@string/settings_text_dark_mode"
                        android:textColor="#262626"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        >

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="On"
                            android:textSize="15sp"
                            android:textColor="@color/gray_495"
                            android:layout_marginEnd="10dp"
                            android:textAlignment="center"
                            />

                        <Switch
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="Off"
                            android:textSize="15sp"
                            android:textColor="@color/gray_495"
                            android:layout_marginStart="10dp"
                            android:textAlignment="center"
                            />

                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    >


                    <ImageView
                        android:id="@+id/icon_settings_language"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_language" />

                    <TextView
                        android:id="@+id/text_settings_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="10dp"
                        android:layout_toEndOf="@id/icon_settings_language"
                        android:drawablePadding="5dp"
                        android:singleLine="true"
                        android:text="@string/settings_text_language"
                        android:textColor="#262626"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        >

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="EN"
                            android:textSize="15sp"
                            android:textColor="@color/gray_495"
                            android:layout_marginEnd="10dp"
                            android:textAlignment="center"
                            />

                        <Switch
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            tools:ignore="UseSwitchCompatOrMaterialXml" />

                        <TextView
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:text="ES"
                            android:textSize="15sp"
                            android:textColor="@color/gray_495"
                            android:layout_marginStart="10dp"
                            android:textAlignment="center"
                            />

                    </LinearLayout>




                </RelativeLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>